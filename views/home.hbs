<h3>Submit a report:</h3>

<form action="/submit" method="POST">
  <label for="user">Name:</label><br />
  <input type="text" name="user" placeholder="Character Name">
  <br />
  <label for="bg">Battleground:</label><br />
  <select name="bg">
    <option value="RED">Red Borderlands</option>
    <option value="GREEN">Green Borderlands</option>
    <option value="BLUE">Blue Borderlands</option>
    <option value="EBG">Eternal Battlegrounds</option>
  </select>
  <br />
  <label for="report">Your Report:</label><br />
  <input type="text" name="report" placeholder="30 JQ spotted at N outer gate at Hills"><br />
  <br />
  <input type="submit" value="submit">
</form>

<h3>{{reportType}}</h3>
<p>{{reportCount}}</p>

{{#each reports}}
  <h2>{{this.rawstamp}}</h2>
  <li>{{this.bg}} BL: {{this.report}}</li>
  <li>Reported by: {{this.user}}</li>
  <li>Posted: {{this.timestamp}}</li>
{{/each}}
