// Imports

@import _normalize
@import _colors

// Tags

html
  font-family Helvetica, Arial, Sans-Serif
  font-size 14px

body
  background-color bg-body

a:link, a:visited, a:active
  font-weight bold
  color bg-red
  text-decoration none

a:hover
  color bg-blue

h1, h2, h3
  margin 0
  padding 0

hr
  border none
  color bg-body
  background-color bg-body
  height 1px

input[type=text], input[type=password]
  color text-input
  border 1px
  border-color #000
  border-style solid
  border-radius .2rem
  outline none
  margin-left 1rem
  margin-bottom 1rem
  padding .2rem

input[type=submit]
  background-color black
  border 1px
  border-color #000
  border-style solid
  border-radius .2rem
  color text-title
  margin-left 1rem
  outline 0 none
  padding .3rem

label
  margin-left 1rem

select
  color text-input
  font-size 1rem
  margin-left 1rem

// Generic Classes

.header
  background-color bg-header
  color text-title
  position fixed
  top 0
  height 2rem
  padding 0.5rem
  width 100% - 0.8rem

.nav-title
  display inline-block

  a
    color text-title

.nav-links
  float right
  padding-top 0.5rem
  padding-right 0.8rem

  ul
    margin 0
    padding 0
    list-style none

    li
      padding-left 1rem
      display inline-block

      a
        color text-title


.content
  margin 3rem auto 3rem auto
  width 100%
  text-align center

.footer
  position fixed
  bottom 0
  width 100%

.submit-form
  background-color bg-footer
  color text-title
  padding-top 1rem

  form
    text-align center
    width 100%
    margin 0 auto

  .login-warning
    font-weight bold
    margin 0
    padding-bottom 1rem
    text-align center

.profile-form
  padding-top 1rem

  .fixed
    color #fff
    background-color #000

  p
    margin-top 0

  input[type=text], input[type=password]
    width 45rem

  input[type=submit]
    margin 0 auto
    display block
    text-align center

  label
    display block
    padding 1rem 0 0.5rem 0

// Messages

.message
  display none
  padding 0
  width 100%
  text-align center

.message-green
  background-color message-green
  color text-title
  font-weight bold
  padding .5rem

.message-red
  background-color message-red
  color text-title
  font-weight bold
  padding .5rem

.message-usercount
  background-color bg-header
  border-radius 0.5rem
  color text-title
  display inline-block
  font-weight bold
  padding .5rem

.verified
  background-color message-green
  color text-title
  display block
  font-weight bold
  padding .5rem

.not-verified
  background-color message-red
  color text-title
  display block
  font-weight bold
  padding .5rem

// Reports - Flexbox

.report-wrapper
  display -webkit-flex
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content center
  align-items flex-start

.about-grid
  background-color bg-report
  border-radius 0.5rem
  -webkit-box-flex 1
  flex 1
  min-width 35rem
  max-width 35rem
  margin 1rem
  text-align center

  ul
    margin 0
    padding 0.5rem

    li
      border-radius 0.5rem
      list-style none

.report-grid
  background-color bg-report
  border-radius 0.5rem
  -webkit-box-flex 1
  flex 1
  min-width 22rem
  max-width 22rem
  margin 1rem
  text-align left

  ul
    margin 0
    padding 0.5rem

    li
      border-radius 0.5rem
      list-style none
      word-break break-word

.report-listing:not(:last-child)
  border-bottom 1px solid bg-body
  border-bottom-left-radius 0
  border-bottom-right-radius 0

.report-input
  width 15rem

.report-text
  font-weight bold

.title-red, .title-green, .title-blue, .title-ebg
  border-top-left-radius 0.5rem
  border-top-right-radius 0.5rem
  color text-title
  padding 0.5rem

.title-red
  background-color bg-red

.title-green
  background-color bg-green

.title-blue
  background-color bg-blue

.title-ebg
  background-color bg-ebg
