// Imports

@import _colors
@import _normalize
@import _media

// Tags

html
  font-family Helvetica, Arial, Sans-Serif
  font-size 14px

  @media iphone4
    font-size 24px

  @media iphone5s
    font-size 24px

body
  background-color bg-body

a:link, a:visited, a:active
  color bg-red
  font-weight bold
  text-decoration none

a:hover
  color bg-blue

h1, h2, h3
  margin 0
  padding 0

hr
  background-color bg-body
  border none
  color bg-body
  height 1px

input[type=text], input[type=password]
  color text-input
  border 1px
  border-color #000
  border-radius .2rem
  border-style solid
  margin-left 1rem
  margin-bottom 1rem
  outline none
  padding .2rem

input[type=submit]
  background-color black
  color text-title
  border 1px
  border-color #000
  border-radius .2rem
  border-style solid
  margin-left 1rem
  outline 0 none
  padding .3rem

label
  margin-left 1rem

select
  color text-input
  font-size 1rem
  margin-left 1rem

  @media iphone4
    font-size 24rem

  @media iphone5s
    font-size 1.5rem

// Generic Classes

.header
  background-color bg-header
  color text-title
  height 2rem
  position fixed
  padding 0.5rem
  top 0
  width 100% - 0.8rem

.content
  margin 3rem auto 3rem auto
  text-align center
  width 100%

.footer
  bottom 0
  position fixed
  width 100%

.nav-title
  display inline-block

  a
    color text-title

.nav-links
  float right
  font-size 1rem
  padding-top 0.5rem
  padding-right 0.8rem

  @media iphone4
    font-size 1.2rem

  @media iphone5s
    font-size 1.2rem

  ul
    margin 0
    padding 0
    list-style none

    li
      display inline-block
      padding-left 0.5rem

      a
        color text-title

.submit-form
  background-color bg-footer
  color text-title
  padding-top 1rem

  @media iphone4
    font-size 1.5rem

  @media iphone5s
    font-size 1.5rem

  form
    width 100%
    margin 0 auto
    text-align center

  .login-warning
    font-weight bold
    margin 0
    padding-bottom 1rem
    text-align center

.profile-form
  padding-top 1rem

  .fixed
    background-color #000
    color #fff

  p
    margin-top 0

  input[type=text], input[type=password]
    min-width 20rem
    width 50%

    @media iphone4
      font-size 1.3rem
      width 80%

    @media iphone5s
      font-size 1.3rem
      width 80%

  input[type=submit]
    display block
    margin 0 auto
    text-align center

  label
    display block
    padding 1rem 0 0.5rem 0

// Messages

.message
  display none
  padding 0
  text-align center
  width 100%

.message-green
  background-color message-green
  color text-title
  font-weight bold
  padding .5rem

.message-red
  background-color message-red
  color text-title
  font-weight bold
  padding .5rem

.message-usercount
  background-color bg-header
  border-right 1px solid text-title
  color text-title
  padding-right 0.5rem

.verified
  background-color message-green
  color text-title
  display block
  font-weight bold
  padding .5rem

.not-verified
  background-color message-red
  color text-title
  display block
  font-weight bold
  padding .5rem

// Reports - Flexbox

.about-grid
  background-color bg-report
  border-radius 0.5rem
  -webkit-box-flex 1
  flex 1
  margin 1rem
  min-width 35rem
  max-width 35rem
  text-align center

  ul
    margin 0
    padding 0.5rem

    li
      border-radius 0.5rem
      list-style none

.report-wrapper
  -webkit-align-items flex-start
  align-items flex-start
  display -webkit-flex
  display flex
  -webkit-flex-direction row
  flex-direction row
  -webkit-flex-wrap wrap
  flex-wrap wrap
  -webkit-justify-content center
  justify-content center

.report-grid
  background-color bg-report
  border-radius 0.5rem
  -webkit-box-flex 1
  flex 1
  margin 0.8rem
  min-width 22rem
  max-width 100%
  text-align left

  ul
    margin 0
    padding 0.5rem

    li
      border-radius 0.5rem
      list-style none
      word-break break-word

.report-listing:not(:last-child)
  border-bottom 1px solid bg-body
  border-bottom-left-radius 0
  border-bottom-right-radius 0

.report-input
  width 15rem

.report-text
  font-weight bold

.title-red, .title-green, .title-blue, .title-ebg
  border-top-left-radius 0.5rem
  border-top-right-radius 0.5rem
  color text-title
  padding 0.5rem

.title-red
  background-color bg-red

.title-green
  background-color bg-green

.title-blue
  background-color bg-blue

.title-ebg
  background-color bg-ebg
